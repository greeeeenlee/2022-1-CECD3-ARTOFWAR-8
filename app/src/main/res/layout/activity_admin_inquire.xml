<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.Admin_InquireActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/orange_origin"
        android:elevation="3dp"
        android:layout_centerInParent="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="관리자 페이지"
            android:textColor="@color/white"
            android:textSize="20dp"/>

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="25dp"
            android:paddingBottom="25dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="문의내용 답변하기"
               android:textSize="24dp"
                android:textColor="@color/black"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="보낸사람"
                android:layout_marginTop="25dp"/>


            <TextView
                android:id="@+id/tv_inquire_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_bt_underbar_3"
                android:textSize="16dp"
                android:text="보낸사람 아이디"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:minHeight="48dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="문의 제목"
                android:layout_marginTop="25dp"/>


            <TextView
                android:id="@+id/tv_inquire_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_bt_underbar_3"
                android:textSize="16dp"
                android:text="동영상 문의1"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:minHeight="48dp" />


            <Button
                android:id="@+id/bt_video"
                android:layout_width="309dp"
                android:layout_height="48dp"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="15dp"
                android:text="해당 동영상 시청하기"
                android:textColor="@color/white"
                android:background="@drawable/layout_bt_fill_orange_2"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="문의 내용"
                android:layout_marginTop="25dp"/>


            <TextView
                android:id="@+id/tv_inquire_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="100dp"
                android:hint="사용자가 작성한 문의 내용"
                android:gravity="top"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:background="@drawable/layout_bt_stroke_black" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="관리자 답변"
                android:layout_marginTop="25dp"/>


            <EditText
                android:id="@+id/et_answer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="100dp"
                android:hint="답변을 작성하시오."
                android:gravity="top"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:background="@drawable/layout_bt_stroke_black" />


            <LinearLayout
                android:id="@+id/layout_buttons"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="25dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="25dp"
                >
                <Button
                    android:id="@+id/bt_cancel"
                    android:layout_width="123dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="15dp"
                    android:text="취소하기"
                    android:textColor="@color/black"
                    android:background="@drawable/layout_bt_stroke_orange"
                    />

                <Button
                    android:id="@+id/bt_answer"
                    android:layout_width="123dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:text="보내기"
                    android:textColor="@color/white"
                    android:background="@drawable/layout_bt_fill_orange_2"
                    />

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>