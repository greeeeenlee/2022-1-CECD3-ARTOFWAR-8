<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.EditActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/orange_origin"
        android:elevation="3dp"
        android:layout_centerInParent="true">

        <ImageButton
            android:id="@+id/imgbtn_category"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="16dp"
            android:adjustViewBounds="true"
            android:background="@color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_baseline_menu_24"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원정보수정"
            android:textColor="@color/white"
            android:textSize="20dp"/>

        <ImageButton
            android:id="@+id/imgbtn_home"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@color/transparent"
            android:scaleType="fitCenter"
            android:layout_gravity="right"
            android:src="@drawable/home_white"
            android:layout_margin="16dp"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="회원정보 수정"
            android:textSize="20dp"
            android:layout_marginTop="18dp"
            android:textColor="@color/black"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="*는 수정가능한 항목입니다."
            android:textSize="10dp"
            android:gravity="right"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="아이디"
            android:textSize="15dp"
            android:layout_marginTop="20dp"/>


        <TextView
            android:id="@+id/tv_etid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:hint="아이디"
            android:background="@drawable/layout_bt_underbar"
            android:paddingLeft="10dp"
            android:gravity="left|center"
            android:textSize="20dp"
            android:minHeight="48dp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="*비밀번호"
            android:textSize="15dp"
            android:layout_marginTop="20dp"/>


        <EditText
            android:id="@+id/et_pw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="비밀번호를 입력하세요."
            android:minHeight="48dp"
            android:theme="@style/EditTextStyle" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="*비밀번호 확인"
            android:textSize="15dp"
            android:layout_marginTop="20dp"/>


        <EditText
            android:id="@+id/et_pw2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="비밀번호를 다시 입력하세요."
            android:minHeight="48dp"
            android:theme="@style/EditTextStyle"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="이름"
            android:textSize="15dp"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/tv_etname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="이름"
            android:minHeight="48dp"
            android:background="@drawable/layout_bt_underbar"
            android:paddingLeft="10dp"
            android:gravity="left|center"
            android:textSize="20dp"
            android:theme="@style/EditTextStyle"/>

        <LinearLayout
            android:id="@+id/layout_buttons"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="40dp"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <Button
                android:id="@+id/bt_cancel"
                android:layout_width="123dp"
                android:layout_height="match_parent"
                android:layout_marginRight="15dp"
                android:text="취소"
                android:textColor="@color/black"
                android:background="@drawable/layout_bt_stroke_orange"
                />

            <Button
                android:id="@+id/bt_modify"
                android:layout_width="123dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:text="수정하기"
                android:textColor="@color/white"
                android:background="@drawable/layout_bt_fill_orange_2"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>