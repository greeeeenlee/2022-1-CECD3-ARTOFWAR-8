<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.VideoEditActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/orange_origin"
        android:elevation="3dp"
        android:layout_centerInParent="true">

        <ImageButton
            android:id="@+id/imgbtn_category"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="16dp"
            android:adjustViewBounds="true"
            android:background="@color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_baseline_menu_24"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="동영상 상세정보"
            android:textColor="@color/white"
            android:textSize="20dp"/>

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="25dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="동영상 상세정보 수정"
                android:textSize="24dp"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="동영상 제목"
                android:layout_marginTop="25dp"/>


            <EditText
                android:id="@+id/et_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_bt_underbar_3"
                android:textSize="16dp"
                android:text="동영상 제목"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:minHeight="48dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="동영상 분류"
                android:layout_marginTop="25dp"/>


            <TextView
                android:id="@+id/tv_division"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_bt_underbar_3"
                android:textSize="16dp"
                android:text="대분류 / 소분류"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:minHeight="48dp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="동영상 소개문"
                android:layout_marginTop="25dp"/>


            <EditText
                android:id="@+id/et_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_bt_underbar_3"
                android:textSize="16dp"
                android:text="동영상 소개문"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:minHeight="48dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="유해성 판단 결과"
                android:layout_marginTop="25dp"/>


            <TextView
                android:id="@+id/tv_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_bt_underbar_3"
                android:textSize="16dp"
                android:text="동영상 유해성 판단 결과"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:minHeight="48dp" />

            <LinearLayout
                android:id="@+id/layout_buttons"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="25dp"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <Button
                    android:id="@+id/bt_cancel"
                    android:layout_width="123dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="15dp"
                    android:text="취소하기"
                    android:textColor="@color/black"
                    android:background="@drawable/layout_bt_stroke_orange"
                    />

                <Button
                    android:id="@+id/bt_modify"
                    android:layout_width="123dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:text="수정하기"
                    android:textColor="@color/white"
                    android:background="@drawable/layout_bt_fill_orange_2"
                    />

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>