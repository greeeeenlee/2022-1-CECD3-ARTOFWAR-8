<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.VideoInquireActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/orange_origin"
        android:elevation="3dp"
        android:layout_centerInParent="true">

        <ImageButton
            android:id="@+id/imgbtn_category"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="16dp"
            android:adjustViewBounds="true"
            android:background="@color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_baseline_menu_24"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="동영상 상세정보"
            android:textColor="@color/white"
            android:textSize="20dp"/>

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="25dp"
            android:paddingBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="동영상 문의하기"
                android:textSize="24dp"
                android:textColor="@color/black"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="문의 제목"
                android:layout_marginTop="25dp"/>


            <EditText
                android:id="@+id/et_inquire_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_bt_underbar_3"
                android:textSize="16dp"
                android:text="동영상 문의1"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:minHeight="48dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="동영상 제목"
                android:layout_marginTop="25dp"/>


            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_bt_underbar_3"
                android:textSize="16dp"
                android:text="동영상 제목"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:minHeight="48dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="동영상 분류"
                android:layout_marginTop="25dp"/>


            <TextView
                android:id="@+id/tv_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_bt_underbar_3"
                android:textSize="16dp"
                android:text="대분류 / 소분류"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:minHeight="48dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="동영상 키워드"
                android:layout_marginTop="25dp"/>


            <TextView
                android:id="@+id/tv_keyword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_bt_underbar_3"
                android:textSize="16dp"
                android:text="동영상 키워드"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:minHeight="48dp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="문의 내용"
                android:layout_marginTop="25dp"/>


            <EditText
                android:id="@+id/et_inquire_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="100dp"
                android:hint="문의 내용을 작성하시오."
                android:gravity="top"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:textColor="@color/black"
                android:background="@drawable/layout_bt_stroke_black" />


            <LinearLayout
                android:id="@+id/layout_buttons"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <Button
                    android:id="@+id/bt_cancel"
                    android:layout_width="123dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="15dp"
                    android:text="취소하기"
                    android:textColor="@color/black"
                    android:background="@drawable/layout_bt_stroke_orange"
                    />

                <Button
                    android:id="@+id/bt_inquire"
                    android:layout_width="123dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:text="문의하기"
                    android:textColor="@color/white"
                    android:background="@drawable/layout_bt_fill_orange_2"
                    />

            </LinearLayout>



        </LinearLayout>

    </ScrollView>

</LinearLayout>