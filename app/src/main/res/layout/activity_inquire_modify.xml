<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.InquireModifyActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/orange_origin"
        android:elevation="3dp"
        android:layout_centerInParent="true">

        <ImageButton
            android:id="@+id/imgbtn_category"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="16dp"
            android:adjustViewBounds="true"
            android:background="@color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_baseline_menu_24"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1대1 문의"
            android:textColor="@color/white"
            android:textSize="20dp"/>

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1대1 문의 내역"
            android:textSize="24dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="25dp"
            android:textColor="@color/black"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="문의 제목"
            android:layout_marginTop="20dp"/>


        <EditText
            android:id="@+id/et_inquire_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_bt_underbar_3"
            android:textSize="16dp"
            android:text="동영상 문의1"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:minHeight="48dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="동영상 제목"
            android:layout_marginTop="20dp"/>


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_bt_underbar_3"
            android:textSize="16dp"
            android:text="동영상 제목"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:minHeight="48dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="문의 내용"
            android:layout_marginTop="20dp"/>


        <EditText
            android:id="@+id/et_inquire"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="100dp"
            android:hint="사용자가 작성한 문의 내용"
            android:gravity="top"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:background="@drawable/layout_bt_stroke_black" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="관리자 답변"
            android:layout_marginTop="20dp"/>


        <TextView
            android:id="@+id/tv_inquire_response"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="100dp"
            android:hint="관리자가 작성한 답변"
            android:gravity="top"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:background="@drawable/layout_bt_stroke_black" />


        <LinearLayout
            android:id="@+id/layout_btn_no_answer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="25dp"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <Button
                android:id="@+id/bt_cancel"
                android:layout_width="123dp"
                android:layout_height="match_parent"
                android:layout_marginRight="15dp"
                android:text="취소"
                android:textColor="@color/black"
                android:background="@drawable/layout_bt_stroke_orange"
                />

            <Button
                android:id="@+id/bt_modify"
                android:layout_width="123dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:text="수정하기"
                android:textColor="@color/white"
                android:background="@drawable/layout_bt_fill_orange_2"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>